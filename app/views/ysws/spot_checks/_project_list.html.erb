<div class="space-y-4">
  <% projects.each do |project| %>
    <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
      <%= link_to new_ysws_approved_project_spot_check_path(project, spot_check_session_id: params[:spot_check_session_id]), class: "block" do %>
        <div class="flex justify-between items-start mb-2">
          <h3 class="text-lg font-medium text-gray-900">
            <%= project.hours_spent %> hours
            <% if project.ysws_program %>
              <span class="text-sm text-gray-500 ml-2">
                <%= project.ysws_program.name %>
              </span>
            <% end %>
          </h3>
          <div class="text-right">
            <div class="text-sm text-gray-500">
              <%= project.approved_at&.strftime("%B %d, %Y") || "Unknown date" %>
            </div>
          </div>
        </div>
        <% if project.description.present? %>
          <div class="text-sm text-gray-600">
            <%= truncate(project.description, length: 200) %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div> 
                  class: "block w-full rounded-lg border-gray-300 bg-gray-50 p-3 text-sm text-gray-900 focus:border-indigo-500 focus:ring-indigo-500 focus:ring-2 shadow-sm transition duration-150 ease-in-out",
                  placeholder: "Please provide detailed feedback about your assessment..." %>
            </div>
          </div>

          <div class="flex justify-end">
            <%= f.submit "Submit Spot Check",
                class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <span class="inline-flex items-center ml-2 text-xs text-gray-500">
              <span class="js-shortcut-key" data-mac="⌘↩" data-win="Ctrl+↩"></span>
            </span>
          </div>
        <% end %>
        
        <!-- Random Review Button (moved from top of page) -->
        <div class="mt-6 pt-6 border-t border-gray-200">
          <%= link_to ysws_new_random_review_path, class: "w-full inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
            </svg>
            Start Another Random Review
          <% end %>
        </div>
      </div>
    </aside>
  </div>
</div>

<script>
  // Create new Stimulus controller for assessment options (just for native behavior)
  (() => {
    // Create the controller if Stimulus is available - add proper existence checks
    document.addEventListener('turbolinks:load', function() {
      setTimeout(() => {
        if (window.Stimulus && window.Stimulus.application) {
          // Check if controller already exists to avoid double registration
          try {
            if (!window.Stimulus.application.controllers.find(c => c.identifier === 'assessment')) {
              window.Stimulus.application.register('assessment', class extends window.Stimulus.Controller {
                static targets = ['radio', 'option']
                
                connect() {
                  // Initialize highlighting when controller connects
                  const checked = this.radioTargets.find(radio => radio.checked)
                  if (checked) {
                    this.highlightSelected(checked)
                  }
                }
                
                select(event) {
                  this.highlightSelected(event.target)
                }
                
                highlightSelected(selectedRadio) {
                  // Reset all options
                  this.optionTargets.forEach(option => {
                    option.className = option.className.replace(/bg-\w+-\d+ border-\w+-\d+/g, '')
                    option.className = "flex items-center cursor-pointer p-3 border rounded-lg hover:bg-gray-50 border-gray-300"
                  })
                  
                  // Apply background to selected option
                  if (selectedRadio && selectedRadio.checked) {
                    const value = selectedRadio.dataset.value
                    const option = this.optionTargets.find(opt => opt.dataset.value === value)
                    if (option) {
                      const bgClass = option.dataset.bgClass
                      if (bgClass) {
                        option.classList.add(...bgClass.split(' '))
                      }
                    }
                  }
                }
              })
            }
          } catch (error) {
            console.log("Assessment controller already registered or Stimulus error:", error)
          }
        }
      }, 200) // Ensure Stimulus is ready
    })
  })()

  // Define a function to manually handle the radio button selection
  function selectRadioOption(color) {
    // Function to update the visual state based on selection
    function updateVisualState(radio) {
      // Reset all options
      document.querySelectorAll('[data-assessment-target="option"]').forEach(option => {
        option.className = option.className.replace(/bg-\w+-\d+ border-\w+-\d+/g, '')
        option.className = "flex items-center cursor-pointer p-3 border rounded-lg hover:bg-gray-50 border-gray-300"
      })
      
      // Apply background to selected option
      const label = document.querySelector(`label[for="${radio.id}"]`)
      if (label) {
        const bgClass = label.getAttribute('data-bg-class')
        if (bgClass) {
          label.classList.add(...bgClass.split(' '))
        }
      }
    }
    
    // Find the radio button
    const radioId = `spot_check_assessment_${color}`
    const radio = document.getElementById(radioId)
    
    if (radio) {
      // Set it as checked
      radio.checked = true
      
      // Update the visual state
      updateVisualState(radio)
      
      return true
    }
    
    return false
  }

  // Use a function that we can call both on initial load and on Turbolinks navigation
  function initializeKeyboardShortcuts() {
    // Clear any previous event listeners to prevent duplicates
    document.removeEventListener('keydown', handleKeyDown)
    
    // Set up platform-specific shortcut indicators
    const isMac = navigator.platform.toUpperCase().indexOf('MAC') >= 0
    document.querySelectorAll('.js-shortcut-key').forEach(el => {
      el.textContent = isMac ? el.dataset.mac : el.dataset.win
    })

    // Add the keydown event listener
    document.addEventListener('keydown', handleKeyDown)
    
    // Add a debug element to help with troubleshooting
    if (document.getElementById('keyboard-debug-helper') === null) {
      const debugElement = document.createElement('div')
      debugElement.id = 'keyboard-debug-helper'
      debugElement.style.position = 'fixed'
      debugElement.style.bottom = '10px'
      debugElement.style.right = '10px'
      debugElement.style.padding = '10px'
      debugElement.style.background = 'rgba(0,0,0,0.7)'
      debugElement.style.color = 'white'
      debugElement.style.borderRadius = '4px'
      debugElement.style.zIndex = '9999'
      debugElement.style.fontSize = '12px'
      debugElement.style.display = 'none'
      document.body.appendChild(debugElement)
    }
  }

  function showDebug(message) {
    const debugElement = document.getElementById('keyboard-debug-helper')
    if (debugElement) {
      debugElement.textContent = message
      debugElement.style.display = 'block'
      setTimeout(() => {
        debugElement.style.display = 'none'
      }, 3000)
    }
    console.log(message)
  }

  // Keyboard shortcut handler function
  function handleKeyDown(e) {
    // Prevent handling if focus is in a text field (except for cmd/ctrl combinations)
    const isInputFocused = ['INPUT', 'TEXTAREA', 'SELECT'].includes(document.activeElement.tagName)
    const isModifierKey = e.metaKey || e.ctrlKey
    
    if (isInputFocused && !isModifierKey) {
      return
    }

    // Handle modifier key combinations first (these take precedence)
    if (isModifierKey) {
      if (e.key === 'Enter' || e.key === 'Return') {
        // Submit the form
        const submitButton = document.querySelector('form input[type="submit"]')
        if (submitButton) {
          submitButton.click()
          e.preventDefault()
        }
        return
      }
    }

    // Only process these shortcuts if not in a text field
    if (!isInputFocused) {
      // URL shortcuts
      if (e.key === 'd') {
        const liveUrlLink = document.querySelector('.live-url-link')
        if (liveUrlLink && liveUrlLink.dataset.url) {
          window.open(liveUrlLink.dataset.url, '_blank')
          e.preventDefault()
        }
        return
      } else if (e.key === 'f') {
        const codeUrlLink = document.querySelector('.code-url-link')
        if (codeUrlLink && codeUrlLink.dataset.url) {
          window.open(codeUrlLink.dataset.url, '_blank')
          e.preventDefault()
        }
        return
      }
      
      // Assessment shortcuts (using our direct function)
      if (e.key === 'j') {
        if (selectRadioOption('green')) {
          showDebug('Green selected via "j" key')
          e.preventDefault()
        } else {
          showDebug('Could not find green option')
        }
      } else if (e.key === 'k') {
        if (selectRadioOption('yellow')) {
          showDebug('Yellow selected via "k" key')
          e.preventDefault()
        } else {
          showDebug('Could not find yellow option')
        }
      } else if (e.key === 'l') {
        if (selectRadioOption('red')) {
          showDebug('Red selected via "l" key')
          e.preventDefault()
        } else {
          showDebug('Could not find red option')
        }
      } else if (e.key === 'n') {
        // Focus the notes field
        const notesField = document.querySelector('#spot_check_notes')
        if (notesField) {
          notesField.focus()
          e.preventDefault()
        }
      }
    }
  }

  // Clean up event listeners when navigating away with Turbolinks
  document.addEventListener('turbolinks:before-cache', function() {
    document.removeEventListener('keydown', handleKeyDown)
  })

  // Initialize on first page load
  document.addEventListener('DOMContentLoaded', initializeKeyboardShortcuts)
  
  // Re-initialize on Turbolinks page changes
  document.addEventListener('turbolinks:load', function() {
    // Make sure this runs after any framework initialization
    setTimeout(initializeKeyboardShortcuts, 100)
  })
</script>
